@{
    ViewBag.Title = "Member";
}


<h1>This is the current Member View</h1>
@model IEnumerable<JaaServWebSolution.Models.UserContent>
<div class="container">
    <div class="page-header">
        <h1>JAAServWebSolution Members Area <br /><small>Upload your files here...</small></h1>
    </div>
    <div class="row">
        @using (Html.BeginForm("UploadContent", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Your Uploaded Content</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <input type="file" name="file" />
                            <br />
                            <input type="submit" class="btn btn-success form-control" value="Save Content" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <br />

    <div class="row">
        <div class="col-lg-12">

            <div class="alert alert-success">You have @ViewBag.PhotoCount Uploads </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href="@item.ContentUrl">
                    <img class="img-responsive" src="@item.ContentUrl" style="height: 300px;width:100%;" alt="">
                </a>
                <a href="@Url.Action("DeleteContent", "Home",new { id = item.Id })" class="btn btn-default btn-group-justified">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </div>


        }
    </div>
</div>
<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <img src="" class="img-responsive">
            </div>
        </div>
    </div>
</div>